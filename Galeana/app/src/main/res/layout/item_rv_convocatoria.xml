<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:foreground="?attr/selectableItemBackground"
    style="@style/AppTheme.CardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/img_convocatoria"
           android:layout_margin="15dp"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@drawable/placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo_convocatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de la convocatoria"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_descripcion_convocatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Descripcion del evento: Aquí va toda la descripción de la convocatoria" />

            <TextView
                android:id="@+id/tv_estatus_convocatoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="estatus de la convocatoria"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leer más..."
                android:textColor="@color/com_facebook_button_send_background_color" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>